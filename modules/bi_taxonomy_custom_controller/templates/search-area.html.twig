{% apply spaceless %}
{% set attributes = create_attribute() %}
{% set classes = [
  'pb-5',
] %}
{% set classes = classes|merge(element['#classes']) %}
<section id="{{ element['#id'] }}">
  <div{{attributes.addClass(classes)}}>
    <div class="container">
      <div class="row">
        <h2 class="text-dark border-bottom pb-2 py-lg-5 my-lg-4">{{ element['#title'] }}</h2>
        {{ element['#view'] }}
      </div>
      <div
        class="col-12 col-lg-3 offset-lg-9">
        <br>{{ element['#link'] }}
      </div>
    </div>
  </div>
</section>
{% endapply %}
